{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
  {{else}}
{{/each}}

<div class="card card-body">
  <h3>Edit Video Idea</h3>
  <form class="" action="/ideas/{{idea.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" class="form-control" value="{{idea.title}}" placeholder="Title" required>
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea class="form-control" name="details" id="details" rows="8" placeholder="Details" cols="80" required>{{idea.details}}</textarea>
    </div>
    <button type="submit" name="button" class="btn btn-md btn-info">Update</button>
  </form>
</div>
